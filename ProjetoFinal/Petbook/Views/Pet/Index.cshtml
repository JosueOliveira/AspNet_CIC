@model IEnumerable<Petbook.Models.Animal>

@{
    ViewBag.Title = "Index";
}

<h2>ViewBag.Title</h2>

<p>
    @Html.ActionLink("Criar Nova", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idade)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dono)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Idade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dono)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.AnimalID }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.AnimalID }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.AnimalID })
        </td>
    </tr>
}

</table>
